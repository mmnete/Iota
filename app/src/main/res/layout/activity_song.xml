<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="mjhub_media.iota.song">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="-1dp"
        android:id="@+id/linearLayout2">

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/searchView"
            android:background="#ffffff"
            android:contentDescription="@string/playlist_searchView_description"/>
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:id="@+id/playlistView"
            android:contentDescription="@string/playlist_plyalistView_description"
            />
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:id="@+id/songView"
            android:contentDescription="@string/playlist_songView_description"
            />
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:id="@+id/userView"
            android:background="#ffffff"
            android:contentDescription="@string/playlist_userView_description"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textAlignment="center"
        android:id="@+id/currFrag"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:id="@+id/imageButton" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:id="@+id/imageButton2"
            android:background="#ffffff"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:id="@+id/imageButton3"
            android:background="#ffffff"
            android:layout_marginLeft="5dp" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shuff"
            android:id="@+id/switch1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:checked="false" />



    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:id="@+id/imageView2"
        android:layout_below="@+id/currFrag"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:textAlignment="center"
        android:id="@+id/textView13"
        android:layout_alignParentTop="true"
        android:layout_marginTop="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
